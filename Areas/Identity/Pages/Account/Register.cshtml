@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-lg-6 mx-auto rounded border p-3">
        <h2 class="text-center mb-3">První přihlášení</h2>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div class="form-floating">
                <input asp-for="Input.jmeno" class="form-control" autocomplete="name" aria-required="true" />
                <label asp-for="Input.jmeno"></label>
                <span asp-validation-for="Input.jmeno" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.prijmeni" class="form-control" autocomplete="surname" aria-required="true" />
                <label asp-for="Input.prijmeni"></label>
                <span asp-validation-for="Input.prijmeni" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.osobni_cislo" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.osobni_cislo"></label>
                <span asp-validation-for="Input.osobni_cislo" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="false" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" href="/" role="button">Zrušit</a>
                </div>
            </div>

            
        </form>
    </div>
</div>


